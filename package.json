{
  "name": "my-pearls",
  "version": "0.0.1",
  "packageManager": "pnpm@7.18.2",
  "description": "My awesome Node.js toolkit library",
  "license": "MIT",
  "homepage": "https://github.com/ShenQingchuan/my-pearls",
  "bugs": {
    "url": "https://github.com/ShenQingchuan/my-pearls/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShenQingchuan/my-pearls.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev:docs": "typedoc --watch",
    "lint": "eslint . --ext .js,.ts,.json",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsup && tsx scripts/postbuild.mts && typedoc",
    "test": "vitest",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "minimatch": "^5.1.1"
  },
  "devDependencies": {
    "@sxzz/eslint-config-prettier": "^2.4.4",
    "@sxzz/eslint-config-ts": "^2.4.4",
    "@types/minimatch": "^5.1.2",
    "@types/node": "*",
    "@vitest/coverage-c8": "^0.26.0",
    "bumpp": "^8.2.1",
    "eslint": "^8.30.0",
    "eslint-define-config": "^1.12.0",
    "fast-glob": "^3.2.12",
    "prettier": "^2.8.1",
    "tsup": "^6.5.0",
    "tsx": "^3.12.1",
    "typedoc": "^0.23.23",
    "typescript": "^4.9.4",
    "vitest": "^0.25.8"
  },
  "engines": {
    "node": ">=16.0"
  }
}